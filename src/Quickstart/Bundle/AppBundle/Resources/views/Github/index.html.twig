<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            1. Github
            <span class="glyphicon glyphicon-ok pull-right"></span>
        </h3>
    </div>
    <div class="panel-body">
        <h4>Latest Events <span class="badge">{{ events|length }}</span></h4>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Type</th>
                <th>When</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.type }}</td>
                    <td>{{ event.created_at|ago }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h4>Pull Requests <span class="badge">{{ pullrequests|length }}</span></h4>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Branch</th>
                <th>When</th>
            </tr>
            </thead>
            <tbody>
            {% for pullrequest in pullrequests %}
                <tr>
                    <td>{{ pullrequest.head.ref }}</td>
                    <td>{{ pullrequest.created_at|ago }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h4>Issues <span class="badge">{{ issues|length }}</span></h4>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Title</th>
            </tr>
            </thead>
            <tbody>
            {% for issue in issues %}
                <tr>
                    <td>{{ issue.title }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <p><strong>Last activity {{ events.0.created_at|ago }}</strong></p>

        <div class="clearfix"></div>
    </div>
</div>
