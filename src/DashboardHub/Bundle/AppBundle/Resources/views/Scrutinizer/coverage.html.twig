<div class="panel panel-default">
    <div class="panel-body">
        <div class="progress">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="{{ attribute(build.develop.index._embedded.project.metric_values, 'scrutinizer.test_coverage')|number_format(3, '.', ',') * 100 }}" aria-valuemin="0" aria-valuemax="100"
                 style="width: {{ attribute(build.develop.index._embedded.project.metric_values, 'scrutinizer.quality')|number_format * 10 }}%;">
                {{ attribute(build.develop.index._embedded.project.metric_values, 'scrutinizer.test_coverage')|number_format(3, '.', ',') * 100 }}%
            </div>
        </div>
    </div>
    <div class="panel-footer">
        Code Coverage <b>{{ attribute(build.develop.index._embedded.project.metric_values, 'scrutinizer.test_coverage')|number_format(3, '.', ',') * 100 }}</b>
    </div>
</div>
