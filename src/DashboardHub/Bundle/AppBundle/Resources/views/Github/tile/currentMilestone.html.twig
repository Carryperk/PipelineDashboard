<div class="panel panel-default">
    <div class="panel-body">
        <div class="progress">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="{{ milestone.completeness }}" aria-valuemin="0" aria-valuemax="100"
                 style="width: {{ milestone.completeness }}%;">
                {{ milestone.title }}
            </div>
        </div>
    </div>
    <div class="panel-footer">
        Milestone due {{ milestone.due_on|date("jS M") }}
    </div>
</div>
